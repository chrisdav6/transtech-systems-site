<% include ./partials/header %>
  
  <!-- Contact Section -->
  <section id="contact">
    <div class="container">
      <div class="row">
        
        <div class="col-lg-8 mx-auto">
          <h2 class="pb-3 text-center text-md-left">Sales Request</h2>
          
          <form action="" method="post" class="d-flex flex-column">
            <div class="form-group">
              <label for="name" class="text-left">Name</label>
              <input type="text" class="form-control form-control-lg" name="name" id="name" required>
            </div>
            
            <div class="form-group">
              <label for="company" class="text-left">Company</label>
              <input type="text" class="form-control form-control-lg" name="company" id="company" required>
            </div>
            
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="state" class="text-left">State</label>
                  <input type="text" class="form-control form-control-lg" name="state" id="state">
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="form-group">
                  <label for="country" class="text-left">Country</label>
                  <input type="text" class="form-control form-control-lg" name="country" id="country" required>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="phone" class="text-left">Phone</label>
                  <input type="text" class="form-control form-control-lg" name="phone" id="phone" required>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="form-group">
                  <label for="email">Email Address</label>
                  <input type="email" class="form-control form-control-lg" name="email" id="email" required>
                </div>
              </div>
            </div>
            
            <div class="form-group mt-4">
              <label for="reach" class="text-left">How did you hear about us?</label>
              <select class="form-control form-control-lg" name="reach" id="reach" required>
                <option>Asphalt Contractor Magazine</option>
                <option>NAPA - Asphalt Pavement Magazine</option>
                <option>Asphalt Pro Magazine</option>
                <option>TXAPA Magazine</option>
                <option>Ohio Flexible Pavements Magazine</option>
                <option>Florida Asphalt Association Magazine</option>
                <option>Facebook</option>
                <option>Twitter</option>
                <option>Google Plus</option>
                <option>Instagram</option>
                <option>Linked In</option>
                <option>World of Asphalt</option>
                <option>ConExpo</option>
                <option>Other Tradeshow</option>
                <option>Friend</option>
              </select>
            </div>
            
            <div class="form-group mt-4">
              <p class="text-left mb-3">Please send me information on</p>
              <div class="form-check ml-3">
                <input class="form-check-input mt-2" type="checkbox" id="asphaltDensity" value="asphaltDensity">
                <label class="form-check-label" for="asphaltDensity">PQI 380 - Non-Nuclear Asphalt Density Gauge</label>
              </div>
              <div class="form-check ml-3 mt-2">
                <input class="form-check-input mt-2" type="checkbox" id="soilDensity" value="soiltDensity">
                <label class="form-check-label" for="soilDensity">SDG 200 - Non-Nuclear Soil Density Gauge</label>
              </div>
              <div class="form-check ml-3 mt-2">
                <input class="form-check-input mt-2" type="checkbox" id="swm" value="swm">
                <label class="form-check-label" for="swm">SWM - Shoulder Wedge Maker</label>
              </div>
              <div class="form-check ml-3 mt-2">
                <input class="form-check-input mt-2" type="checkbox" id="nwjm" value="nwjm">
                <label class="form-check-label" for="nwjm">NWJM - Notched Wedge Joint Maker</label>
              </div>
              <div class="form-check ml-3 mt-2">
                <input class="form-check-input mt-2" type="checkbox" id="pts" value="pts">
                <label class="form-check-label" for="pts">PTS 3000 - Pavement Temperature Sentry</label>
              </div>
            </div>


            <div class="form-group mt-4">
              <label for="message">Message</label>
              <textarea class="form-control" name="message" id="message" rows="5" required></textarea>
            </div>
            <button class="btn btn-outline-success btn-lg submit-btn ml-0 ml-lg-auto">Submit</button>
          </form>
        </div>
        
      </div>
    </div>
  </section>
  <!-- /contact Section -->
  
<% include ./partials/footer %>