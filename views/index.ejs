      </div>
      
    </div>
  </section>
  <!-- /hero section -->
  
  
  
  <!-- featured -->
  <section id="featured" class="bg-light text-center">
    <div class="container">
      <h1 class="title">Our Products</h1>
      <hr>
      
      <!-- row - non-nuclear -->
      <div class="row align-items-center mb-4">
        <div class="col-lg-4">
          <h1 class="category-title">Non-Nuclear</h1>
        </div>
        
        <div class="col-lg-4">
          <a href="#" class="text-dark">
            <div class="card border-none">
              <img class="card-img-top mx-auto mt-4 mt-lg-0" src="img/pqi380-featured.png" alt="Non-Nuclear Asphalt Density Gauge">
              <div class="card-body">
                <h3 class="card-title">PQI 380 Asphalt Denisty Gauge</h3>
